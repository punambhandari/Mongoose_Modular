<html>
<head>
	<title>Edit</title>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script type="text/javascript">
	$(document).ready(function(){
		
		$('#delete').click(function(){
			$('#selectedFiles').html("");
		})

		$('#btnsubmit').click(function(e){
			e.preventDefault();
			if($('#selectedFiles').html()=="")
			{
				alert("please upload a file");
			}
			else
			{
				  $('form').submit();
			}
		})

		$('#file').change(function(){
			console.log($('#file').val());
			$('#selectedFiles').html($('#file').val());
		})
	});

	</script>
	<style type="text/css">
	#container{
	margin: 20px auto;
	width: 970px;
	font-family: arial;
	font-size: 12px;
}
form{
	padding: 10px;
}
ul{
	list-style: none;
	display: inline;
}
li{
	margin: 5px;
}
ul a{
	color: white;
}
#nav{
	height: 60px;
	background-color: black;
	width: 970px
}
input[type="submit"]{
	width: 60px;
	margin-left: 350px
}
textarea{
	width: 300px;
	height: 100px;
}

	</style>
</head>
<body>
<div id="container">
	<div id="nav">
		<ul>
			<li><a href ="/">Go back</a></li>
		</ul>
	</div>
	<form method="post" action="/mongooses/<%= mongoose[0]._id %>" enctype ="multipart/form-data">
		<p><label>Name : </label>
		<input type="text" name="name" value="<%= mongoose[0].name %>"></p>
		<p><label>Country :</label>
		<input type="text" name="country" value="<%= mongoose[0].country %>"></p>
		<p><label>Description :</label>
		<textarea name="description"><%= mongoose[0].description %></textarea></p>
		<p><label>Author :</label>
		<input type="text" name="author" value="<%= mongoose[0].author %>"></p>
		<p><label>Uploaded pictures</label></p>
		<div id="selectedFiles">
			<p><%= mongoose[0].url %> <a id='delete' href="#">Remove</a></p>
		</div>
		<p><label>Upload Picture :</label>
		<input type="file" name ="picture" id="file">
		<input type="submit" value="update" id="btnsubmit">

	</form>


</body>
</html>